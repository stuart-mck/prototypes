@model to_lib.Resource

<div id="@Model.Id" class="row resourceEditor sectionContent">
    <div class="row toolBar">
        <span class="col-lg-1 form-control">@Html.EditorFor(e => e.Title)</span>
        <span class="col-lg-offset-7  col-lg-1">@Html.EditorFor(e => e.Attributes, "Attributes", new { modelId = @Model.Id })</span>
        <span class="col-lg-1">@Html.EditorFor(e => e.Tags, "Tags", new { modelId = @Model.Id })</span>
        <a href="#" onclick="toggleFirstChild('@Model.Id')" class="col-lg-1 glyphicon glyphicon-arrow-down"> </a>
    </div>
    <div class="resource content">
        @Html.DisplayFor(e => e.Title)
        <a href="/Home/UploadResource" data-toggle="modal" data-target="#res@(Model.Id)">Load Resource</a>
        <a href="/Home/ConfigureResource" data-toggle="modal" data-target="#conres@(Model.Id)">Configure Resource</a>
    </div>
</div>


<div id="res@(Model.Id)" class="modal fade attEditor" tabindex="-1" role="dialog" aria-labelledby="remoteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>

<div id="conres@(Model.Id)" class="modal fade attEditor" tabindex="-1" role="dialog" aria-labelledby="remoteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>




